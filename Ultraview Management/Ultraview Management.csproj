<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Ultraview_Management</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>remote-control.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="remote-control.ico" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ToolSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ToolSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="ToolSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>ToolSettings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>